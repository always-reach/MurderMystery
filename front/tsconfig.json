{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./build",
    "sourceMap": true,
    "paths": {
      "@components/*":["./components/*"],
      "@hooks/*":["./hooks/*"],
      "@graphql/*":["./graphql/*"],
      "@state/*":["./state/*"],
      "@storybook/*":["./storybook/*"],
      "@styles/*":["./styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
